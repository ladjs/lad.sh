{
  "apps": [
    {
      "name": "web",
      "script": "web.js",
      "exec_mode": "cluster",
      "wait_ready": true,
      "instances": "max",
      "env_production": {
        "NODE_ENV": "production"
      }
    },
    {
      "name": "api",
      "script": "api.js",
      "exec_mode": "cluster",
      "wait_ready": true,
      "instances": "max",
      "env_production": {
        "NODE_ENV": "production"
      }
    },
    {
      "name": "bree",
      "script": "bree.js",
      "exec_mode": "fork",
      "wait_ready": true,
      "instances": "1",
      "env_production": {
        "NODE_ENV": "production"
      }
    },
    {
      "name": "proxy",
      "script": "proxy.js",
      "exec_mode": "cluster",
      "wait_ready": true,
      "instances": "max",
      "env_production": {
        "NODE_ENV": "production"
      }
    }
  ],
  "deploy": {
    "production": {
      "user": "deploy",
      "host": "lad-deploy",
      "ref": "origin/master",
      "repo": "git@github.com:ladjs/lad.sh.git",
      "path": "/var/www/production",
      "post-deploy": "yarn && NODE_ENV=production yarn start build && pm2 startOrGracefulReload ecosystem.json --env production --update-env"
    }
  }
}
